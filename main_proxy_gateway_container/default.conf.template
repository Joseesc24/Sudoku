upstream searcher_servers {
    server ${MIDDLE_PROXY_1} weight=8 max_fails=1 fail_timeout=20s;
    server ${MIDDLE_PROXY_2} weight=8 max_fails=1 fail_timeout=20s;
    server ${MIDDLE_PROXY_3} backup;
}

server {
    listen ${ACCESS_PORT};

    location ~ ^/(hill_climbing|genetic_algorithm|simulated_annealing|neuronal_network) {
        proxy_pass http://searcher_servers;
        proxy_pass_request_headers on;
        proxy_pass_request_body on;
    }
}